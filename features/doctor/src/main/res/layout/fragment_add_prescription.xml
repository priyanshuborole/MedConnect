<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".presentation.prescription.AddPrescriptionFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbPatientProfile"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="8dp"
            android:outlineProvider="background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/tvPatientProfileHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_profile"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/viewHeader"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tbPatientProfile"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Fill the patient details for prescription"
            android:layout_marginHorizontal="34dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/viewHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tbPatientProfile"/>

        <EditText
            android:id="@+id/etSymptoms"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Symptoms"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_default"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewHeader"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etObservation"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Observation"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_default"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/bg_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSymptoms"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etDiagnosis"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Diagnosis"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_default"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/bg_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etObservation"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of consultation"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/text_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDiagnosis"/>
    <TextView
        android:id="@+id/tvAddDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_appointment_calendar"
        android:text="06 April"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:backgroundTint="#F3F5FF"
        android:paddingHorizontal="18dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_rounded_15"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate"/>
    <TextView
        android:id="@+id/tvAddMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Medicine"
        android:textColor="@color/app_blue"
        android:backgroundTint="#F3F5FF"
        android:paddingHorizontal="18dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_rounded_15"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddDate"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddMedicine"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="42dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine name"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dose"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>