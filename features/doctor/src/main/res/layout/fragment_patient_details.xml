<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.patientDetails.PatientDetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbPatientProfile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="8dp"
        android:outlineProvider="background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/tvPatientProfileHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_profile"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbPatientProfile"/>
    <View
        android:id="@+id/viewProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_profile"
        android:backgroundTint="@color/app_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbPatientProfile"  />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_profile"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="@id/viewProfile"
        app:layout_constraintTop_toTopOf="@id/viewProfile"
        app:layout_constraintEnd_toEndOf="@id/viewProfile"
        app:layout_constraintBottom_toBottomOf="@id/viewProfile"/>

    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priyanshu Borole"
        android:drawableEnd="@drawable/ic_male"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tbPatientProfile"
        app:layout_constraintStart_toEndOf="@id/viewProfile"/>

    <TextView
        android:id="@+id/tvPatientContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+918483919735"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_default"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvPatientName"
        app:layout_constraintStart_toStartOf="@id/tvPatientName"/>

    <TextView
        android:id="@+id/tvPatientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 Yrs old"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_default"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvPatientContact"
        app:layout_constraintStart_toStartOf="@id/tvPatientName"/>

    <TextView
        android:id="@+id/tvPatientBloodGrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood group: o+"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_default"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvPatientAge"
        app:layout_constraintStart_toStartOf="@id/tvPatientName"/>

    <TextView
        android:id="@+id/tvPatientAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: Pune"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_default"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvPatientBloodGrp"
        app:layout_constraintStart_toStartOf="@id/tvPatientName"/>

    <TextView
        android:id="@+id/tvYourPatients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient History"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textColor="@color/text_default"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPatientHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        tools:listitem="@layout/item_patients_home"
        android:layout_marginHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvYourPatients"
        app:layout_constraintBottom_toTopOf="@id/llBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvPatientHistory">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddPrescription"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:text="Add Prescription"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvPatientHistory"
        app:layout_constraintBottom_toBottomOf="parent"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bCall"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="Call"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="8dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvPatientHistory"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bWhatsapp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_whatsapp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>